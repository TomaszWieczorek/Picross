<Page
    x:Class="App1.Multi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:ConnectionId='1' Name="btn1x1" FontFamily="Snap ITC" Grid.Column="0" Height="147" Width="113" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='2' Name="btn1x2" FontFamily="Snap ITC" Grid.Column="1" Height="147" Width="113" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='3' Name="btn1x3" FontFamily="Snap ITC" Grid.Column="2" Height="147" Width="113" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='4' Name="btn2x1" FontFamily="Snap ITC" Grid.Column="0" Height="147" Width="113" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='5' Name="btn2x2" FontFamily="Snap ITC" Grid.Column="1" Height="147" Width="113" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='6' Name="btn2x3" FontFamily="Snap ITC" Grid.Column="2" Height="147" Width="113" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='7' Name="btn3x1" FontFamily="Snap ITC" Grid.Column="0" Height="147" Width="113" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='8' Name="btn3x2" FontFamily="Snap ITC" Grid.Column="1" Height="147" Width="113" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='9' Name="btn3x3" FontFamily="Snap ITC" Grid.Column="2" Height="147" Width="113" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"                     />
        <Button x:ConnectionId='10' Name="btnStart" Foreground="LightGreen" FontFamily="Snap ITC" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Width="112"                        Margin="9.667,89.5,11.667,1"/>
        <TextBox x:Name="txtWynik" FontFamily="Snap ITC" Visibility="Collapsed" Grid.ColumnSpan="3"  HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="380" Margin="10,147,10,82" FontSize="15" IsReadOnly="True" Height="66" TextAlignment="Center" Grid.RowSpan="2"/>
        <Button x:ConnectionId='11' x:Name="buttonExit" Content="Menu" Grid.Column="2" HorizontalAlignment="Left" Background="" FontSize="20" Foreground="LightGreen" FontFamily="Snap ITC" Margin="14.333,89.5,0,0" Grid.Row="4" VerticalAlignment="Top" Width="10" Height="10"                         />
        <Button x:Name="btnKogoRuchTekst" IsHitTestVisible="False" Content="Turn:" FontFamily="Snap ITC" HorizontalAlignment="Left" Margin="10,17.5,0,0" Grid.Row="4" VerticalAlignment="Top" FontWeight="Bold" Background="" FontSize="15" Foreground="LightGreen" BorderThickness="0"/>
        <Button x:Name="btnKogoRuch" IsHitTestVisible="False" FontSize="30" FontFamily="Snap ITC" HorizontalAlignment="Left" Margin="13,72.5,0,0" Grid.Row="4" VerticalAlignment="Top" FontWeight="Bold" Background="" Foreground="LightGreen" BorderThickness="0"/>
        <Button x:Name="btnNazwa" Grid.Row="0" IsHitTestVisible="False" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Player vs player" FontWeight="Bold" Background="" FontSize="20" Foreground="LightGreen" FontFamily="Snap ITC" Grid.ColumnSpan="3" BorderThickness="0" Margin="56,0,59,-7" Width="285"/>
    </Grid>
</Page>

