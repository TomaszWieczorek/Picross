<Page
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnNapis" IsHitTestVisible="False" BorderThickness="0" FontSize="38" Foreground="Yellow" Content="Tic toe" FontWeight="Bold" FontStyle="Italic" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="10,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="380" Height="111" FontFamily="Snap ITC"/>
        <Button x:ConnectionId='1' x:Name="btnSingle" BorderThickness="0" Content="Player vs AI" FontSize="28" Foreground="LightGreen" FontFamily="Snap ITC" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Left" Margin="29,37.5,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="324" Height="85"                        />
        <Button x:ConnectionId='2' x:Name="btnMulti" BorderThickness="0" Content="Player vs Player" FontSize="28" Foreground="LightGreen" FontFamily="Snap ITC" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Left" Margin="29,38,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="325" Height="85"                       />
        <Button x:ConnectionId='3' x:Name="btnExit" Content="Exit" BorderThickness="0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="10.333,83.5,0,0" Grid.Row="4" Height="63" Width="83" FontSize="28" Foreground="LightGreen" FontFamily="Snap ITC" FontWeight="Bold" FontStyle="Italic"                      />
    </Grid>
</Page>

